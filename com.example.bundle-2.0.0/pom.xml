<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.example.release-repo</groupId>
	<artifactId>com.example.parent</artifactId>
	<version>2.0.0</version>
	<packaging>pom</packaging>

	<modules>
		<module>com.example.bundle</module>
		<module>com.example.feature</module>
		<module>com.example.p2</module>
	</modules>

 	<properties>
		<tycho.version>0.15.0</tycho.version>
	</properties>

	<build>

		<plugins>

			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
				<version>${tycho.version}</version>
				<!-- Enable tycho packaging types -->
				<extensions>true</extensions>
			</plugin>

			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
				<version>${tycho.version}</version>
			</plugin>

		</plugins>
	</build>
</project>
